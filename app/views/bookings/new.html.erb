<div class = sign-in><h1>Book <%= @shoe.brand %></h1></div>
<div class="login-form" style="display: flex; flex-direction: row; align-items: center; justify-content: center;">


  <div class="booking-form">
    <%= simple_form_for @booking, url: shoe_bookings_path(@shoe), local: true do |f| %>
      <!-- Shoe Details -->
      <div class="shoe-details">
        <p><strong>Shoe:</strong> <%= @shoe.brand %></p>
        <p><strong>Price per Day:</strong> $<%= @shoe.price_per_day %></p>
      </div>

      <!-- Booking Dates -->
      <div style="display: flex; justify-content: space-between">
        <%=f.input :start_date, as: :string, required: true, autofocus: true, input_html: { data: {autocomplete: "start date", controller: "datepicker" } }%>
        <%=f.input :end_date, as: :string, required: true, autofocus: true, input_html: { data: {autocomplete: "end date", controller: "datepicker" } }, class: "end"%>
      </div>
      <!-- Message Field -->
      <%= f.input :message, as: :text, label: "Message (Optional)", input_html: { class: "form-control", placeholder: "Leave a message or special request for the booking" } %>

      <!-- Payment Method -->
      <%= f.input :payment_method, label: "Payment Method", collection: [["Credit Card", "credit_card"], ["PayPal", "paypal"], ["Bank Transfer", "bank_transfer"]], prompt: "Select a Payment Method", required: true, input_html: { class: "form-control" } %>

      <!-- Total Price -->
      <div class="form-group">
        <p><strong>Total Price:</strong> $<span id="total_price">0.00</span></p>
      </div>

      <!-- Submit Button -->
      <div class="login-form" style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
        <%= f.submit 'Confirm Booking', class:"confirm-button" %>
      </div>
    <% end %>
  </div>
  </div>
</div>
