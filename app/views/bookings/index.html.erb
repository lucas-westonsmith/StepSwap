<div class="container my-5">
  <h1 class="mb-4 text-center">My bookings</h1>

  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100" style="border-radius: 8px;">
          <!-- Image of the shoe -->
          <% if booking.shoe.shoe_url.present? %>
            <img
              src="<%= booking.shoe.shoe_url %>"
              alt="<%= booking.shoe.brand %>"
              class="card-img-top"
              style="object-fit: cover; height: 200px; border-top-left-radius: 8px; border-top-right-radius: 8px;">
          <% else %>
            <div class="card-img-top bg-secondary d-flex justify-content-center align-items-center text-white"
                 style="height: 200px; border-top-left-radius: 8px; border-top-right-radius: 8px;">
              No Image Available
            </div>
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= booking.shoe.title %></h5>
            <p class="card-text mb-3">
              <strong>Start Date:</strong> <%= booking.start_date %><br>
              <strong>End Date:</strong> <%= booking.end_date %><br>
              <strong>Status:</strong> <%= booking.status %><br>
              <strong>Total Price:</strong> #TODO
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
