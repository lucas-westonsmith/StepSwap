<div class = recover-password><h2>Retrieve password</h2></div>
<div class="recover-form" style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
    <%= f.button :submit, "Send", class:"loginmenu-button" %>
  </div>
  <div style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
    <p class="back">Press here to go  <%= link_to "back", :back %></p>
  </div>
</div>
<% end %>
</div>
