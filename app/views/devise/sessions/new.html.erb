<div class="sign-in-card">
  <div class = sign-in>
    <strong><h2>Sign in</h2></strong>
  </div>
  <div class="login-form" style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div><br>
      <div class="login-form" style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
        <%= f.button :submit, "Sign in", class: "loginmenu-button" %>
      </div><br>
      <div style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
      <p><%= render "devise/shared/links" %></p>
      </div>
  <% end %>
  </div>
</div>
