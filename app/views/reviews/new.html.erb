<div class="review-title">
  <h1>Review for <%= @booking.shoe.brand %> Booking</h1>
</div>

<div class="review-form" style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
  <div class="review-form">
    <%= simple_form_for [@shoe, @booking, @review], local: true do |f| %>

      <!-- Shoe Details -->
      <div class="shoe-details">
        <p><strong>Shoe:</strong>  <%= @booking.shoe.brand %></p>
        <p><strong>Price per Day:</strong>  <%= @booking.shoe.price_per_day %>  <i class="fa-solid fa-euro-sign" style="color: #424242;"></i></p>
        <p><strong>Booking Dates:</strong> <%= @booking.start_date.strftime("%d-%m-%Y") %>   <i class="fa-solid fa-arrow-right"></i>   <%= @booking.end_date.strftime("%d-%m-%Y") %></p>
      </div>

      <!-- Rating -->
      <div class="rating">
        <%= f.input :rating, as: :select, collection: (1..5).to_a, prompt: "Rate this shoe (1-5)", required: true, input_html: { class: "form-control" } %>
      </div>

      <!-- Review Content -->
      <%= f.input :content, as: :text, label: "Write your review", input_html: { class: "form-control", placeholder: "Share your experience with the shoe and the booking" } %>

      <!-- Submit Button -->
      <div class="review-form" style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
        <%= f.submit 'Submit Review', class: "submit-review-button" %>
      </div>
      <div style="display: flex; flex-direction: row; align-items: center; justify-content: center;">
        <p>Press here to go  <%= link_to "back", :back %></p>
    <% end %>
  </div>
</div>
