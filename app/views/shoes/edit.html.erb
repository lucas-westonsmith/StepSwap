<div class="edit-shoe">
  <h1 class="text-center p-3">Edit Shoe Details</h1>

  <div style="display: flex; flex-direction: column; align-items: center;">
    <%= simple_form_for @shoe, url: shoe_path(@shoe), method: :patch, local: true do |f| %>

          <%= f.input :title, label: "Title", required: true, input_html: { class: "form-control" } %>

          <%= f.input :brand, as: :select, label: "Brand", collection: ['Adidas', 'Asics', 'Balenciaga', 'Birkenstock', 'Brooks', 'Clarks', 'Columbia', 'Converse', 'Dr. Martens', 'Fila', 'Gucci', 'Hoka One One', 'Jordan', 'Keen', 'Lacoste', 'Merrell', 'Mizuno', 'New Balance', 'Nike', 'Puma', 'Reebok', 'Salomon', 'Saucony', 'Skechers', 'The North Face', 'Timberland', 'Under Armour', 'Vans', 'Prada'], input_html: { class: "form-control" }, include_blank: 'Select Brand' %>

          <%= f.input :size, label: "Size", required: true, input_html: { class: "form-control", min: 1 } %>

         <%= f.input :condition, as: :select, label: "Condition", collection: ['New', 'Like New', 'Used', 'Worn'], input_html: { class: "form-control" }, include_blank: 'Select Condition' %>

          <%= f.input :price_per_day, label: "Price per day (in $)", input_html: { class: "form-control", step: 1, min: 0 } %>


          <%= f.input :description, as: :text, label: "Description (Optional)", input_html: { class: "form-control", rows: 5 } %>


          <%= f.input :photo, as: :file, label: "Upload a photo" %>

          <div class="form-actions pb-4" style="margin-top: 20px;">
          <%= f.submit 'Update Shoe', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
