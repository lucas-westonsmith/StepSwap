<div class="container">
  <h1>New Shoe</h1>

  <div class="shoe-form">
    <%= simple_form_for @shoe, url: shoes_path, local: true do |f| %>
      <!-- Title -->
      <%= f.input :title, as: :string, label: "Title", required: true, input_html: { class: "form-control" } %>

      <!-- Brand -->
      <%= f.input :brand, as: :select, label: "Brand", collection: ['', 'Adidas', 'Asics', 'Balenciaga', 'Birkenstock', 'Brooks', 'Clarks', 'Columbia', 'Converse', 'Dr. Martens', 'Fila', 'Gucci', 'Hoka One One', 'Jordan', 'Keen', 'Lacoste', 'Merrell', 'Mizuno', 'New Balance', 'Nike', 'Puma', 'Reebok', 'Salomon', 'Saucony', 'Skechers', 'The North Face', 'Timberland', 'Under Armour', 'Vans', 'Prada'], input_html: { class: "form-control" }, include_blank: 'Select Brand' %>


      <!-- Size -->
      <%= f.input :size, as: :integer, label: "Size", required: true, input_html: { class: "form-control" } %>

      <!-- Condition (Dropdown) -->
      <%= f.input :condition, as: :select, label: "Condition", collection: ['New', 'Like New', 'Used', 'Worn'], input_html: { class: "form-control" }, include_blank: 'Select Condition' %>

      <!-- Price per day -->
      <%= f.input :price_per_day, as: :decimal, label: "Price per day", input_html: { class: "form-control" } %>

      <!-- Description -->
      <%= f.input :description, as: :text, label: "Description (optional)", input_html: { class: "form-control" } %>
      <!-- Shoe Image -->
      <%= f.input :photo, as: :file %>

      <!-- Submit Button -->
      <div class="form-group">
        <%= f.submit 'Confirm creation', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
